<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <WebView
            android:id="@+id/dataReceived"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            tools:layout_constraintWidth_max="wrap" />

        <Button
            android:id="@+id/offButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="Turn Fan Off" />

        <Button
            android:id="@+id/loButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="Low Speed" />

        <Button
            android:id="@+id/medButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="Medium Speed" />

        <Button
            android:id="@+id/hiButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="High Speed" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>